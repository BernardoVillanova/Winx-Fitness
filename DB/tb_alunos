CREATE TABLE Alunos (
    ID INT AUTO_INCREMENT PRIMARY KEY,
    Nome VARCHAR(100) NOT NULL,
    Email VARCHAR(100) UNIQUE NOT NULL,
    Telefone VARCHAR(20),
    DataNascimento DATE,
    Peso DECIMAL(5,2),
    Altura DECIMAL(5,2),
    Objetivo VARCHAR(100),
    Fumante BOOLEAN DEFAULT FALSE,
    NivelFumante INT,
    CONSTRAINT chk_nivel_fumante CHECK (NivelFumante BETWEEN 1 AND 3),
    Sedentario BOOLEAN DEFAULT FALSE,
    NivelSedentario INT,
    CONSTRAINT chk_nivel_sedentario CHECK (NivelSedentario BETWEEN 1 AND 3)
);

/* EXEMPLO DE INSERÇÃO
INSERT INTO Alunos (Nome, Email, Telefone, DataNascimento, Peso, Altura, Objetivo, Fumante, NivelFumo, Sedentario, NivelSedentario)
	    VALUES ('João Silva', 'joao@example.com', '123456789', '1990-05-15', 75.5, 1.75, 'Perder peso', TRUE, 2, FALSE, 1);
*/

